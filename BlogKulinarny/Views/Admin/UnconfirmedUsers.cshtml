@model List<User>
@{Layout = "~/Views/Shared/_Panel_Layout.cshtml";}

<div class="container-fluid mt-3">
    <div class="row">
        @foreach (var User in Model)
        {
        <div class="col-12 mt-2 mb-2">
            <div class="border border-warning border-2 border-primary rounded-3 p-3 shadow bg-light bg-opacity-25">
                <div class="row gy-3">
                    <!-- Info -->
                    <div class="col-7">
                        <div class="row gy-3 gx-3">
                            <div class="col-lg-4 col-md-7">
                                <div class="py-2 text-truncate fw-bold" title="Nazwa użytkownika">
                                    @User.login
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-5">
                                <div class="py-2 text-truncate" title="Rola">
                                    @User.rank
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="py-2 text-truncate" title="Email">
                                    @User.mail
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Przyciski -->
                    <div class="col-5">
                        <div class="row gy-3 gx-3">
                            <div class="d-grid col-lg-4 col-md-12">
                                <form asp-controller="Admin" asp-action="ConfirmUser" method="post">
                                    <div class="d-grid">
                                        <input type="hidden" name="userId" value="@User.Id" />
                                        <button type="submit" class="btn btn-success text-nowrap">Zatwierdź</button>
                                    </div>
                                </form>
                            </div>
                            <div class="d-grid col-lg-4 col-md-6">
                                <form asp-controller="Admin" asp-action="DeleteUser" method="post">
                                    <div class="d-grid">
                                        <input type="hidden" name="userId" value="@User.Id" />
                                        <button type="submit" class="btn btn-danger text-nowrap">Odrzuć</button>
                                    </div>
                                </form>
                            </div>
                            <div class="d-grid col-lg-4 col-md-6">
                                <form asp-controller="Admin" asp-action="DetailsUser" method="post">
                                    <div class="d-grid">
                                        <input type="hidden" name="userId" value="@User.Id" />
                                        <button type="button" class="btn btn-warning text-nowrap">Szczegóły</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>