
@{Layout = "~/Views/Shared/_Panel_Layout.cshtml";}

<div class="container">
    <div class="row justify-content-center">
        <div class="col">
            <form>
                <!-- Kafelek Przepisu -->
                <div class="border border-2 border-warning rounded-3 p-3 shadow bg-light bg-opacity-25 mt-3">
                    <div class="row p-2">
                        <!-- Tytuł -->
                        <div class="col-12 mb-0">
                            <div class="text-center fw-bold fs-3">Dodawanie postów</div>
                        </div>
                        <!-- Obraz -->
                        <div class="col-md-6 mb-2">
                            <label class="form-label text-nowrap">Obraz</label>
                            <input type="file" class="form-control" required/>
                        </div>
                        <!-- Trudność -->
                        <div class="col-md-6 mb-2">
                            <label class="form-label text-nowrap">Trudność przepisu</label>
                            <input type="range" class="form-range" required/>
                        </div>
                        <!-- Porcje -->
                        <div class="col-md-6 mb-2">
                            <label class="form-label text-nowrap">Porcje przepisu</label>
                            <input type="text" class="form-control" required/>
                        </div>
                        <!-- Czas przygotowania -->
                        <div class="col-md-6 mb-2">
                            <label class="form-label text-nowrap">Czas przygotowania przepisu</label>
                            <input type="text" class="form-control" required/>
                        </div>
                        <!-- Opis -->
                        <div class="col-12 mb-2">
                            <label class="form-label text-nowrap">Opis przepisu</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        
                        
                    </div>
                </div>

                <!-- Kafelek kroku -->
                <div class="border border-2 border-warning rounded-3 p-3 shadow bg-light bg-opacity-25 mt-3">
                    <div class="row p-2">
                        <div class=col-12>
                            <div class="row gx-0">
                                <div class="col-10">
                                    <label class="form-label text-nowrap">Obraz</label>
                                    <input type="file" class="form-control" required/>
                                </div>
                                 <div class="col-1 offset-1 d-grid">
                                    <div class="btn-group-vertical btn-group-md" role="group">
                                        <button type="button" class="btn btn-warning fw-bold">↑</button>
                                        <button type="button" class="btn btn-warning fw-bold">↓</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        
                        <!-- Opis -->
                        <div class="col-12 mb-2">
                            <label class="form-label text-nowrap">Opis przepisu</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
                        </div>
                    </div>
                </div>
                <!-- Dodaj Krok -->
                <div class="d-grid mt-3 shadow">
                    <button class="btn btn-warning">Dodaj Krok</button>
                </div>
                <!-- Submit -->
                <div class="d-grid mt-3 shadow">
                    <button type="submit" class="btn btn-success">Dodaj Przepis</button>
                </div>
            </form>
        </div>
    </div>
</div>