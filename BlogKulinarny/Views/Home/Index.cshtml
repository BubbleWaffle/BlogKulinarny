    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-6">
                <p class="text-center fs-1 fst-italic">Tutaj jakieś motto życiowe pls.</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-7">
                <div class="border border-2 border-warning rounded-3 p-3 shadow bg-light bg-opacity-25 mt-3">
                    <div class="row">
                        <div class="col">
                            <p class="text-center text-secondary fs-5">Przejdź do wyszukiwarki przepisów</p>
